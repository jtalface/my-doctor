# ================================================
# MyDoctor Backend - Environment Configuration
# ================================================
#
# Copy this file to:
#   .env.development  (for local development)
#   .env.production   (for production deployment)
#
# You can also create .env.local for personal overrides
# (API keys, etc.) - this file is always gitignored.
#
# ================================================

# ------------------------------------------------
# SERVER
# ------------------------------------------------
PORT=3002

# ------------------------------------------------
# MONGODB
# ------------------------------------------------
# Development (local):
# MONGODB_URI=mongodb://mydoctor:mydoctor123@localhost:27017/mydoctor?authSource=admin
#
# Production (Atlas):
# MONGODB_URI=mongodb+srv://user:password@cluster.xxxxx.mongodb.net/mydoctor?retryWrites=true&w=majority

MONGODB_URI=mongodb://localhost:27017/mydoctor

# ------------------------------------------------
# LLM PROVIDERS
# ------------------------------------------------
# Options: "lm-studio" (local) or "openai" (cloud)
DEFAULT_LLM_PROVIDER=lm-studio

# LM Studio (Local - for development)
LM_STUDIO_URL=http://localhost:1235/v1
LM_STUDIO_MODEL=meditron-7b
LM_STUDIO_TIMEOUT=30000

# OpenAI (for production or when LM Studio unavailable)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-5-nano
OPENAI_TIMEOUT=30000

# ------------------------------------------------
# DEBUG & LOGGING
# ------------------------------------------------
DEBUG_MODE=false

# ------------------------------------------------
# CORS
# ------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:1234,http://localhost:3000

